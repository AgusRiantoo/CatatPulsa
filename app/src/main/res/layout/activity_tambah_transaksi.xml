<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ipan.pencatattransaksipulsa.TambahTransaksi">

    <EditText
        android:focusable="false"
        android:hint="Masukan tanggal"
        android:id="@+id/tgl"
        android:onClick="setDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Operator dan Nominal"
        android:id="@+id/textView7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/operator"
            android:layout_weight="1"
            android:prompt="@string/judul_operator"
            android:entries="@array/operator"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nominal"
            android:layout_weight="1"
            android:prompt="@string/judul_nominal"
            android:entries="@array/nominal"/>
    </LinearLayout>

    <EditText
        android:focusable="false"
        android:hint="Jenis Pulsa"
        android:textSize="16sp"
        android:id="@+id/jenispulsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:focusable="false"
        android:hint="Harga Jual"
        android:textSize="16sp"
        android:id="@+id/hargajual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oke"
        android:id="@+id/submit" />

</LinearLayout>
